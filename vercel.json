{
  "version": 2,
  "builds": [
    { "src": "api/server.py", "use": "@vercel/python" },
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "static/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/ask", "dest": "/api/server.py" },
    { "src": "/action", "dest": "/api/server.py" },
    { "src": "/stt", "dest": "/api/server.py" },

    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/manifest.json", "dest": "/manifest.json" },

    { "src": "/", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}

